        { "dialogue":"Mind yourself.", "criteria":[ ["isAction", "=", "idle"], ["npcHasFlag", "=", "tired"] ] },
        { "dialogue":"I don't really have time for idle chatter traveller.", "criteria":[ ["isAction", "=", "smalltalk"] ] },
        { "dialogue":"I've got my own things to worry about.", "criteria":[ ["isAction", "=", "smalltalk"] ] },
