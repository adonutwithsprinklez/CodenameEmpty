        { "dialogue":"I've heard of dangerous caves full of wolves deeper in the woods. I'd avoid going too far off the trail if I were you.", "criteria":[ ["isAction", "=", "smalltalk"] ], "weight":3 },
        { "dialogue":"I've heard of hunters coming acrossed caves deep in the woods. Full of beasts they claim.", "criteria":[ ["isAction", "=", "smalltalk"] ], "weight":3 },
        { "dialogue":"Old shrines and holy places sit in the forest. Old and forgotten, except by those dangerous enough to inhabit them.", "criteria":[ ["isAction", "=", "smalltalk"] ], "weight":3 },
        { "dialogue":"Interested in any of my goods by any chance?", "criteria":[ ["isAction", "=", "smalltalk"], ["npcProfessions", "has", "shopkeep"] ], "weight":5 },
        { "dialogue":"I'm a trader myself. Looking to buy anything?", "criteria":[ ["isAction", "=", "smalltalk"], ["npcProfessions", "has", "shopkeep"] ], "weight":5 },
        { "dialogue":"Howdy Human. Been to Oskiris recently?", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "human"] ] },
        { "dialogue":"Been a little while since the last time I've seen an Elf in these parts.", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "elf"] ] },
        { "dialogue":"Master Dwarf. Mines been treating you well I assume?", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "dwarf"] ] },
        { "dialogue":"Welcome, Orc.", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "orc"], ["npcIsRace", "!=", "orc"] ] },
        { "dialogue":"Lizard, you're a bit further south than usual.", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "drakt"] ] },
        { "dialogue":"Watch yourself Lizard.", "criteria":[ ["isAction", "=", "greeting"], ["playerRace", "=", "drakt"], ["npcIsRace", "!=", "drakt"] ] },
        { "dialogue":"Howdy Human. Been to Oskiris recently?", "criteria":[ ["isAction", "=", "greeting"], ["npcInventoryCount", "<=", 0] ] },
